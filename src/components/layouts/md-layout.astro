---
import HtmlLayout from '@layouts/html-layout.astro'
import MainLayout from '@layouts/main-layout.astro'

import { changeLanguage } from '@libs/i18n/i18n'

const { frontmatter } = Astro.props

void changeLanguage(frontmatter.lang)
---

<HtmlLayout title={frontmatter.title}>
  <MainLayout>
    <div class="container mx-auto p-4 py-16">
      <slot /> <!-- Markdown content is injected here -->
    </div>
  </MainLayout>
</HtmlLayout>
