---
interface Props {
  name: string
  label?: string
  required?: boolean
}

const { name, label, required } = Astro.props
---

<label for={name} class="mb-2 block text-sm font-medium leading-6">
  {label ?? name}
</label>
<div class="relative max-w-sm">
  <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3.5">
    <i class="ti ti-calendar" />
  </div>
  <!-- @ts-expect-error Error expexted -->
  <input
    type="text"
    class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 pl-10 text-sm
    text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700
    dark:text-white dark:placeholder:text-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500"
    name={name}
    id={name}
    placeholder={name}
    required={required}
    datepicker={true}
  />
</div>
