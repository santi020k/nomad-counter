---
import HeartsIcon from '@atoms/icons/hearts-icon.astro'
import InstagramIcon from '@atoms/icons/instagram-brand-icon.astro'
import TwitterIcon from '@atoms/icons/twitter-brand-icon.astro'
import YoutubeIcon from '@atoms/icons/youtube-brand-icon.astro'

import { localizePath, t } from '@utils/lang-utils'
---

<div class="relative h-16" />

<div class="absolute bottom-0 w-screen bg-base-300">
  <div class="container mx-auto">
    <footer class="footer items-center gap-y-px p-4">
      <aside class="grid-flow-col items-center gap-1">
        <p class="m-0"><span class="text-primary">N</span> <span class="text-secondary">C</span></p>
        <p class="m-0">
          {t('common:generic.by')}
          &nbsp;
          <a href="https://santi020k.me" target="_blank">
            @{t('common:generic.santi020k')}
          </a>
          &nbsp;
          {t('common:generic.with')}
        </p>
        <span class="text-red-600"><HeartsIcon size={24} /></span>
        |
        <a href={localizePath('/privacy-policy')}>{t('common:pages.privacy')}</a>
        |
        <a href={localizePath('/terms')}>{t('common:pages.term')}</a>
      </aside>
      <nav class="grid-flow-col gap-1 md:place-self-center md:justify-self-end">
        <a
          href="https://www.instagram.com/santi020k/"
          target="_blank"
          referrerpolicy="no-referrer"
          class="hover:text-primary"
          aria-label="Go to my instagram page"
        >
          <InstagramIcon size={24} />
        </a>
        <a
          href="https://www.youtube.com/channel/UCqF4wgazBVcWtNrjSnHiItw"
          target="_blank"
          referrerpolicy="no-referrer"
          class="hover:text-primary"
          aria-label="Go to my youtube page"
        >
          <YoutubeIcon size={24} />
        </a>
        <a
          href="https://twitter.com/santi020k"
          target="_blank"
          referrerpolicy="no-referrer"
          class="hover:text-primary"
          aria-label="Go to my twitter page"
        >
          <TwitterIcon size={24} />
        </a>
      </nav>
    </footer>
  </div>
</div>
