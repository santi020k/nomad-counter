---
import ToggleLanguage from '@molecules/buttons/toggle-language-button.astro'
import ToggleTheme from '@molecules/buttons/toggle-theme-button/toggle-theme-button'
import SessionHandler from '@molecules/session-handler/session-handler'

import { localizePath, t } from '@utils/lang-utils'
---

<nav
  class="navbar sticky top-0 z-30 flex w-auto justify-center border-b border-b-stone-200
  bg-base-100/90 p-0 text-base-content shadow-sm backdrop-blur transition-all
  duration-100 [transform:translate3d(0,0,0)] dark:border-b-stone-700 sm:p-2"
>
  <div class="container mx-auto flex flex-col py-4 sm:flex-row">
    <div class="mb-4 flex-1 sm:mb-0">
      <a
        href={localizePath('/')}
        class="h-auto cursor-pointer text-4xl font-semibold normal-case leading-8 no-underline sm:text-5xl"
      >
        <span class="text-primary">
          {t('common:site.name.nomad')}
        </span>
        <span class="text-secondary">
          {t('common:site.name.counter')}
        </span>
      </a>
    </div>
    <div class="flex flex-row gap-2">
      <div class="flex items-center">
        <SessionHandler logoutText={t('common:messages.auth.logout')} client:visible />
      </div>
      <div class="flex-none">
        <ToggleLanguage />
      </div>
      <div class="flex-none">
        <ToggleTheme client:visible />
      </div>
    </div>
  </div>
</nav>
