---
import ToggleLanguage from '@molecules/buttons/toggle-language-button.astro'
import ToggleTheme from '@molecules/buttons/toggle-theme-button/index.astro'
import SessionHandler from '@molecules/session-handler/index.astro'
---

<nav
  class="navbar w-auto border-b border-b-stone-200 dark:border-b-stone-700
  bg-base-100 text-base-content sticky top-0 z-30 flex justify-center bg-opacity-90
  backdrop-blur transition-all duration-100 [transform:translate3d(0,0,0)] shadow-sm"
>
  <div class="py-4 container mx-auto flex flex-col sm:flex-row">
    <div class="flex-1 mb-4 sm:mb-0">
      <div class="normal-case text-5xl h-auto leading-8 font-semibold cursor-default">
        <span class="text-primary">Nomad</span> <span class="text-secondary">Counter</span>
      </div>
    </div>
    <div class="flex flex-row gap-3">
      <div class="flex items-center">
        <SessionHandler />
      </div>
      <div class="flex-none">
        <ToggleLanguage />
      </div>
      <div class="flex-none">
        <ToggleTheme />
      </div>
    </div>
  </div>
</nav>
