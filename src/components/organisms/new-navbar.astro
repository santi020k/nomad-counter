---
// import ToggleLanguage from '@molecules/buttons/toggle-language-button.astro'
// import ToggleTheme from '@molecules/buttons/toggle-theme-button/toggle-theme-button.astro'
// import SessionHandler from '@molecules/session-handler/session-handler'

// import { localizePath, t } from '@utils/lang-utils'
import { version } from '../../../package.json';
---

<header
  class="bg-white dark:bg-gray-800 sticky top-0 z-30 flex w-full flex-wrap border-b bg-base-100/90 py-4 text-sm
  shadow-sm backdrop-blur transition-all duration-100 [transform:translate3d(0,0,0)]
  dark:shadow-[0_1px_2px_0_rgba(255,255,255,0.05)] sm:flex-nowrap sm:justify-start sm:p-2"
>
  <nav
    class="mx-auto flex w-full max-w-[85rem] basis-full flex-wrap items-center justify-between px-4"
    aria-label="Global"
  >
    <a class="dark:text-white flex-none text-xl font-semibold sm:order-1" href="/">
      {'Nomad Counter'}
    </a>
    <div class="flex items-center gap-x-2 sm:order-3">
      <span
        class="border-gray-200 bg-white text-gray-800 dark:bg-slate-900 dark:border-gray-700 dark:text-white inline-flex
        items-center gap-x-1.5 rounded-full border px-3 py-1.5 text-xs font-medium shadow-sm"
      >
        {`v${version}`}
      </span>
    </div>
    <div
      class="hs-collapse grow basis-full overflow-hidden transition-all duration-300 sm:order-2 sm:grow-0 sm:basis-auto"
    >
      <div class="mt-5 flex flex-col gap-5 sm:mt-0 sm:flex-row sm:items-center sm:ps-5">
        <a
          class="text-blue-500 dark:focus:ring-gray-600 font-medium dark:focus:outline-none dark:focus:ring-1"
          href="/"
          aria-current="page"
        >
          {'Landing'}
        </a>
        <a
          class="text-gray-600 hover:text-gray-400 dark:text-gray-400 dark:hover:text-gray-500 dark:focus:ring-gray-600
          font-medium dark:focus:outline-none dark:focus:ring-1"
          href="/"
        >
          {'Account'}
        </a>
        <a
          class="text-gray-600 hover:text-gray-400 dark:text-gray-400 dark:hover:text-gray-500 dark:focus:ring-gray-600
          font-medium dark:focus:outline-none dark:focus:ring-1"
          href="/"
        >
          {'Work'}
        </a>
        <a
          class="text-gray-600 hover:text-gray-400 dark:text-gray-400 dark:hover:text-gray-500 dark:focus:ring-gray-600
          font-medium dark:focus:outline-none dark:focus:ring-1"
          href="/"
        >
          {'Blog'}
        </a>
      </div>
    </div>
  </nav>
</header>
