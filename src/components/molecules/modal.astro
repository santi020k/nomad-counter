---
// import type { HTMLTag } from 'astro/types';

interface Props {
  modalId: string
  btnClass?: string
  btnText?: string
  title?: string
}

const { modalId, btnClass, btnText, title } = Astro.props

const buttonEvent = `${modalId}.showModal()`
---

<button class:list={["btn", btnClass]} onclick={buttonEvent}>{btnText ?? 'Open'}</button>
<dialog id={modalId} class="modal modal-bottom sm:modal-middle">

  <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
    </form>

    {title ?? <h3 class="font-bold text-lg">{title}</h3>}

    <div class="modal-body">
      <slot />
    </div>

    <div class="modal-action">
      <form method="dialog">
        <!-- if there is a button in form, it will close the modal -->
        <button class="btn">Close</button>
      </form>
    </div>
  </div>

  <label class="modal-backdrop" for={modalId}>Close</label>
</dialog>